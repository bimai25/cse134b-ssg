---
import BaseLayout from "../layouts/BaseLayout.astro";
import HikeCard from "../components/HikeCard.astro";

// Fetch all hikes from the Markdown collection
const hikes = await Astro.glob('../content/hikes/*.md');
---

<BaseLayout title="Hiking Adventures">
  <h1>Explore the Best Hikes</h1>
  <p>Discover amazing hiking trails across the country.</p>
  <hr/>

  <section class="hike-grid">
    {hikes.map((hike) => (
      <HikeCard
        title={hike.frontmatter.title}
        location={hike.frontmatter.location}
        description={hike.frontmatter.description}
        image={hike.frontmatter.image}
        slug={hike.url}
      />
    ))}
  </section>
</BaseLayout>